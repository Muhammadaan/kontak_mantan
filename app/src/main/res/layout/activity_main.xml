<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.ade.kontak_mantan.MainActivity">

 <TextView
     android:id="@+id/txvHalloMantan"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Hallo Mantan !!!"
     android:textSize="40sp"
     android:textColor="#54d5da"
     android:layout_gravity="center"
     android:layout_marginTop="150dp"
     android:textStyle="bold" />
    <Button
        android:onClick="button_onClick"
    android:id="@+id/btnLihatKontak"
    android:layout_marginTop="30dp"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:textColor="#000"
    android:textSize="15sp"
    android:text="Lihat Kontak mantan"
    android:layout_gravity="center"
    />
    <Button
        android:onClick="button_onClick"
        android:id="@+id/btnTambahKontak"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Tambah Mantan"
        android:layout_gravity="center"
        />
</LinearLayout>
